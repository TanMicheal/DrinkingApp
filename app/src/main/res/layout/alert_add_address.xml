<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="40dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/txt_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/input_round"
        android:hint="@string/enter_your_name"
        android:inputType="text"
        android:elevation="20dp"/>

    <EditText
        android:id="@+id/txt_province"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_round"
        android:hint="@string/enter_your_province"
        android:padding="10dp"
        android:elevation="20dp" />

    <EditText
        android:id="@+id/txt_district"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_round"
        android:hint="Enter your district"
        android:padding="10dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/txt_commnune"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_round"
        android:hint="Enter your commune"
        android:padding="10dp"
        android:inputType="text"
        android:elevation="20dp" />

    <EditText
        android:id="@+id/txt_village"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_round"
        android:hint="Enter your village"
        android:inputType="text"
        android:padding="10dp"
        android:elevation="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:elevation="20dp">
        <EditText
            android:hint="@string/enter_your_province"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/input_round"/>
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_oke_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_cancel_round"
        android:padding="8dp"
        android:text="ADD"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:elevation="20dp" />
</androidx.appcompat.widget.LinearLayoutCompat>